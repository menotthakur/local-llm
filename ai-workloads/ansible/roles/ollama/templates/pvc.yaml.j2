apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: ollama-data
  namespace: {{ ollama_namespace }}
  labels:
    app: ollama
    app.kubernetes.io/name: ollama
    app.kubernetes.io/component: storage
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ ollama_storage_size }}
